  #pass git push -u origin master && shutdown now
  shutdown now
}

tickle () {
    deadline=$1
    shift
    task add +in +tickle wait:$deadline $@
}

next-task () {
    id=$1
    task $id modify +next
}

start-task () {
    id=$1
    next_task $id
    task $id start
}
alias tick=tickle
alias think='tickle +1d'
alias n=next-task
alias s=start-task

