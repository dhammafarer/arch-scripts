compress-pdf () {
  INPUT=$1
  SETTINGS=${2:-printer}
  filename=$(basename -- "$INPUT")
  FILENAME="${filename%.*}"
  gs -sDEVICE=pdfwrite -dCompatibilityLevel=1.4 -dPDFSETTINGS=/$SETTINGS -dNOPAUSE -dQUIET -dBATCH -sOutputFile=${FILENAME}-${SETTINGS}.pdf $INPUT
}

alias cpdf=compress-pdf

